{
  "name": "julebitforbit",
  "version": "1.0.2",
  "description": "Julekonkurranse i bit for bit ånd",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "export": "next build && next export",
    "deploy": "npm test && next build && next export && now --static out/ --name julebitforbit && now alias",
    "test": "standard && npm audit && ava",
    "test-offline": "standard && ava",
    "coverage": "nyc ava",
    "coveralls": "nyc ava && nyc report --reporter=lcov && cat coverage/lcov.info | coveralls",
    "standard-fix": "standard --fix",
    "generate-json": "node utils/generate-json",
    "refresh": "rm -rf node_modules && rm package-lock.json && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zrrrzzt/julebitforbit.git"
  },
  "standard": {
    "ignore": [
      "/static/*.js"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    }
  },
  "keywords": [],
  "author": "Geir Gåsodden <geir.gasodden@pythonia.no> (https://github.com/zrrrzzt)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zrrrzzt/julebitforbit/issues"
  },
  "homepage": "https://github.com/zrrrzzt/julebitforbit#readme",
  "devDependencies": {
    "ava": "3.15.0",
    "coveralls": "3.1.0",
    "nyc": "15.1.0",
    "standard": "16.0.3"
  },
  "dependencies": {
    "babel-eslint": "10.1.0",
    "generate-pincode": "5.0.3",
    "gun": "0.2020.520",
    "knuth-shuffle": "1.0.8",
    "next": "10.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-full-screen": "1.0.0",
    "react-key-handler": "1.1.0"
  },
  "now": {
    "alias": "bitforbit.allthethings.win"
  },
  "engines": {
    "node": ">=10.15.1"
  }
}
